<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7BE"
    android:orientation="vertical"
    tools:context=".baskin31.MainFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="406dp"
        android:layout_height="141dp"
        android:capitalize="characters"
        android:gravity="center_horizontal"
        android:text="BASKIN 31\nGAME"
        android:textAllCaps="false"
        android:textColor="#FF6F61"
        android:textIsSelectable="false"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F0EED7"
        android:text="START"
        android:textColor="#277FBB"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numInput"
        app:layout_constraintVertical_bias="0.112" />

    <EditText
        android:id="@+id/numInput"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center_horizontal|center_vertical"
        android:hint="몇 명?"
        android:inputType="number"
        android:textColor="#F70F090B"
        android:textColorHint="#979696"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="378dp"
        android:layout_height="51dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="대결할 컴퓨터 수를 입력하세요!"
        android:textColor="#FF6F61"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />

</android.support.constraint.ConstraintLayout>